{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node",
      "config": { "maxLambdaSize": "50mb" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/index.js"
    }
  ],
  "env": {
    "MONGO_URI": "@MONGO_URI",
    "REFRESH_SECRET": "@REFRESH_SECRET",
    "ACCESS_SECRET": "@ACCESS_SECRET"
  }
}